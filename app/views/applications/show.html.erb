<h1><%= @application.name %></h1>
<h3>Address: </h3><%= @application.address %>
<h3>Home Description: </h3><%= @application.home_description %>
<h3>Status: </h3><%= @application.status %>
<br/>
<br/>

<h3>Add a pet to this application:</h3>
<%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>

<br/>
<% if params[:search].present? %>
  <% @pets.each do |pet| %>
    <%= pet.name %>
    <form action="/applications/<%=@application.id%>"
      <input type ="hidden" id="pet" name="pet" value=<%= "pet.id" %> />
      <input type ="submit" value="Adopt this pet">
    </form>
    <br/>
  <% end %>
<% end %>

<% @application.pets.each do |pet| %>
  <%= pet.name %>
<% end %>